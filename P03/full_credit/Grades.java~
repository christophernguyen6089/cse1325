import java.util.Scanner;

public class Grades{
    public static void main(String args[]){
        Scanner scan = new Scanner(System.in);
        Student yourName = new Student();
        Student yourSum = yourName.examSum;
        Student yourNumGrades = yourName.examNumGrades;
        
        int flag = 1;
        double inputGrade = 0;
        yourName.yourSum = 0;
        System.out.print("Please enter your name: ");
        yourName = scan.nextLine();
        while(flag==1){
            System.out.print("Enter your exam grade, enter '-1' to exit.");
            inputGrade = scan.nextInt();
            if(inputGrade==-1.0){
                System.out.println("Done."+yourName+", your average is: "+yourName.average());
                exit(0);
            }
            else{
                yourName.addExam(inputGrade);
                yourName.yourNumGrades++;
            }
            
        }
    }
}
